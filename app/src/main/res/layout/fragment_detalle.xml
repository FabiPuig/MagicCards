<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a20464654j.magiccards.DetalleActivityFragment"
    tools:showIn="@layout/activity_detalle">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/ivCarta"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <TextView
        android:text="Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvNom"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/ivCarta"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="Type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvType"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvNom"
        app:layout_constraintRight_toRightOf="@+id/tvNom"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNom" />

    <TextView
        android:text="Rarity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvRarity"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvType"
        app:layout_constraintRight_toRightOf="@+id/tvType"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvType" />

    <TextView
        android:text="Colors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvColor"
        app:layout_constraintRight_toRightOf="@+id/tvRarity"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRarity"
        app:layout_constraintLeft_toLeftOf="@+id/tvRarity"
        app:layout_constraintHorizontal_bias="0.12" />

    <TextView
        android:text="Text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tvText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="252dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.5538462"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="455dp"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="174dp"
        app:layout_constraintGuide_percent="0.453125"/>
</android.support.constraint.ConstraintLayout>
