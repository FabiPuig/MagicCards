<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />

    <!-- ListPreference Rareza-->
    <ListPreference
        android:defaultValue="Common"
        android:entries="@array/pref_rarity_titles"
        android:entryValues="@array/pref_rarity_values"
        android:key="rarity"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Rareza" />

    <!-- ListPreference Color-->
    <ListPreference
        android:defaultValue="Red"
        android:entries="@array/pref_color_titles"
        android:entryValues="@array/pref_color_values"
        android:key="color"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Color" />

</PreferenceScreen>
